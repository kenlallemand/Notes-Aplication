<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                {{title}} <a href="/notes/edit/{{_id}}"><i class="small material-icons">border_color</i></a>
                </h4>
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">Delete</button>
                    </form>
                </form>  
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hello There {{user.name}}</h1>
            <p class="lead">There are not notes here</p>
            <a href="/notes/add" class="btn btn-success btn-block">Create one</a>
        </div>
    </div>
    {{/each}}
</div>